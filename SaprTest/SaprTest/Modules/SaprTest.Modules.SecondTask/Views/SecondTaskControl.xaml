<UserControl x:Class="SaprTest.Modules.SecondTask.Views.SecondTaskControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:vm="clr-namespace:SaprTest.Modules.SecondTask.ViewModels"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d"
             d:DesignHeight="580"
             d:DesignWidth="930"
             d:Background="White"
             d:DataContext="{d:DesignInstance Type=vm:SecondTaskControlViewModel}">
    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <Canvas x:Name="_second_task_canvas_"
                    Width="5000"
                    Height="5000"/>
        </ScrollViewer>
        <Grid Grid.Column="0">
            
        </Grid>
    </Grid>
</UserControl>
